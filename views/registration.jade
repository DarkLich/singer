extends layout

block heads
  link(rel='stylesheet', href='/stylesheets/registration.css')
  script(src='/js/main.js')
  script(src='/js/registration.js')
block content
  .wrap.container
    form#sign_in_form.form-signin(action='/registration' method='post')
      fieldset
        .form-group
          input.form-control(type='text' name='accountName' placeholder='Nick Name' autocomplete="off")
        .form-group
          input.form-control(type='text' name='email' placeholder='Email' autocomplete="off")
        .form-group
          input.form-control(type='password' name='password' placeholder='Password' autocomplete="off")
        .form-group
          input.form-control(type='password' name='confirm' placeholder='Confirm' autocomplete="off")
        button.btn.btn-lg.btn-primary.btn-block(type='Sign in') Sign in